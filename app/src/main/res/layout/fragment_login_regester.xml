<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_login_regester">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Let's Get Started"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Create on new account"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <View
            android:id="@+id/name_frame_blue"
            android:layout_width="380dp"
            android:layout_height="53dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rectengle_shap"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <View
            android:id="@+id/name_frame_red"
            android:layout_width="380dp"
            android:layout_height="53dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rectengle_red"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/user"
            app:layout_constraintBottom_toBottomOf="@+id/name_frame_blue"
            app:layout_constraintStart_toStartOf="@+id/name_frame_blue"
            app:layout_constraintTop_toTopOf="@+id/name_frame_blue" />

        <EditText
            android:id="@+id/editText_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:hint="Full Name"
            android:background="@android:color/transparent"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="@+id/name_frame_blue"
            app:layout_constraintEnd_toEndOf="@+id/name_frame_blue"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/name_frame_blue" />

        <View
            android:id="@+id/email_fram_blue"
            android:layout_width="380dp"
            android:layout_height="53dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rectengle_shap"
            app:layout_constraintEnd_toEndOf="@+id/name_frame_blue"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/name_frame_blue"
            app:layout_constraintTop_toBottomOf="@+id/name_frame_blue" />

        <View
            android:id="@+id/email_fram_red"
            android:layout_width="380dp"
            android:layout_height="53dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rectengle_red"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/name_frame_blue"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/name_frame_blue"
            app:layout_constraintTop_toBottomOf="@+id/name_frame_blue" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:src="@drawable/message"
            app:layout_constraintBottom_toBottomOf="@+id/email_fram_blue"
            app:layout_constraintStart_toStartOf="@+id/email_fram_blue"
            app:layout_constraintTop_toTopOf="@+id/email_fram_blue" />

        <EditText
            android:id="@+id/editText_Remail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:hint="Your Email"
            android:background="@android:color/transparent"
            android:inputType="textWebEmailAddress"
            app:layout_constraintBottom_toBottomOf="@+id/email_fram_blue"
            app:layout_constraintEnd_toEndOf="@+id/email_fram_blue"
            app:layout_constraintStart_toEndOf="@+id/imageView7"
            app:layout_constraintTop_toTopOf="@+id/email_fram_blue" />

        <View
            android:id="@+id/password_fram_blue"
            android:layout_width="380dp"
            android:layout_height="53dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rectengle_shap"
            app:layout_constraintEnd_toEndOf="@+id/email_fram_blue"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/email_fram_blue"
            app:layout_constraintTop_toBottomOf="@+id/email_fram_blue" />

        <View
            android:id="@+id/password_fram_red"
            android:layout_width="380dp"
            android:layout_height="53dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rectengle_red"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/email_fram_blue"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/email_fram_blue"
            app:layout_constraintTop_toBottomOf="@+id/email_fram_blue" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:src="@drawable/password"
            app:layout_constraintBottom_toBottomOf="@+id/password_fram_blue"
            app:layout_constraintStart_toStartOf="@+id/password_fram_blue"
            app:layout_constraintTop_toTopOf="@+id/password_fram_blue"
            app:layout_constraintVertical_bias="0.482" />

        <EditText
            android:id="@+id/editText_Rpassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:hint="Password"
            android:background="@android:color/transparent"
            android:inputType="textPassword"
            app:layout_constraintBottom_toBottomOf="@+id/password_fram_blue"
            app:layout_constraintEnd_toEndOf="@+id/password_fram_blue"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView8"
            app:layout_constraintTop_toTopOf="@+id/password_fram_blue" />

        <View
            android:id="@+id/password2_fram_blue"
            android:layout_width="380dp"
            android:layout_height="53dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rectengle_shap"
            app:layout_constraintEnd_toEndOf="@+id/password_fram_blue"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/password_fram_blue"
            app:layout_constraintTop_toBottomOf="@+id/password_fram_blue" />

        <View
            android:id="@+id/password2_fram_red"
            android:layout_width="380dp"
            android:layout_height="53dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rectengle_red"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/password_fram_blue"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/password_fram_blue"
            app:layout_constraintTop_toBottomOf="@+id/password_fram_blue" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:src="@drawable/password"
            app:layout_constraintBottom_toBottomOf="@+id/password2_fram_blue"
            app:layout_constraintStart_toStartOf="@+id/password2_fram_blue"
            app:layout_constraintTop_toTopOf="@+id/password2_fram_blue" />

        <EditText
            android:id="@+id/editText_Rpassword2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:hint="Password Again"
            android:background="@android:color/transparent"
            android:inputType="textPassword"
            app:layout_constraintBottom_toBottomOf="@+id/password2_fram_blue"
            app:layout_constraintEnd_toEndOf="@+id/password2_fram_blue"
            app:layout_constraintStart_toEndOf="@+id/imageView9"
            app:layout_constraintTop_toTopOf="@+id/password2_fram_blue" />

        <Button
            android:id="@+id/button_singUP"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:text="Sign Up"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password2_fram_blue" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="have a account?"
            app:layout_constraintEnd_toStartOf="@+id/textView_toSingIn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_singUP" />

        <TextView
            android:id="@+id/textView_toSingIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textColor="@color/purple_500"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/textView6" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>